<h1>
  Projects

  <%= link_to new_project_path, class: "btn btn-primary" do %>
    <span class="bi bi-plus-lg" aria-hidden="true"></span>
    New Project
  <% end %>

  <em><%= params[:all] ? 'Now, Show All' : (link_to "ShowAll", root_path(all: true)) %></em>
</h1>


<% @projects.each do |project| %>
  <% next if project.completed && params[:all] != "true" %>
  <h2><%= link_to project.name, project %></h2>
  <p>
    <%= project.description %>
  </p>
<% end %>
